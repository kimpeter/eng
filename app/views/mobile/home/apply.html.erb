<div class="popup">
  <div class="navi2">
    <%= link_to(image_tag("mobile/exit.png", id:"exit"), "index") %>
  </div>
  <div class="content">
    <%= image_tag("mobile/apply/title.png", class:"popup_title") %>
    <div class="input_box">
      <%= image_tag("mobile/apply/text_name.png", style:"width: 20%;") %>
      <input type="text" class="popup_input" name="code">
      <br><br>
      <%= image_tag("mobile/apply/text_phone.png", style:"width: 20%;") %>
      <input type="text" class="popup_input">
      <br><br>
      <%= image_tag("mobile/apply/text_address.png", style:"width: 20%;") %>
      <input type="text" class="popup_input">
      <br>
      <%= image_tag("mobile/apply/text_address_more.png", style:"width: 20%;") %>
      <input type="text" class="popup_input">
    </div>
    <div class="agree_box">
      <input type="checkbox"><%= image_tag("mobile/apply/text_agree_2.png", style:"width: 30%;") %> <%= link_to(image_tag("mobile/apply/text_agree_more.png", class:"text_agree_more"), "#agree_more") %><br>
      <input type="checkbox"><%= image_tag("mobile/apply/text_agree_1.png", style:"width: 50%; margin-right: 12%;") %>
    </div>
    <%= link_to(image_tag("mobile/apply/button.png", class:"apply_btn"), "index") %>
    <%= image_tag("mobile/apply/caution.png", class:"caution") %>
  </div>
</div>
